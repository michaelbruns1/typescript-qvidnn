{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2017",
    "module": "CommonJS",
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"]
}
